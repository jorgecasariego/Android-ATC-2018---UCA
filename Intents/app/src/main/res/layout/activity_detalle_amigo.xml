<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleAmigoActivity">

    <TextView
        android:id="@+id/amigo_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Mi amigo invisible es Daenerys"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="52dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/amigo_textview"
        app:srcCompat="@drawable/amigo"
        tools:layout_editor_absoluteX="0dp" />

    <TableRow
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="8dp">

        <ImageButton
            android:id="@+id/amazon_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_amazon" />

        <ImageButton
            android:id="@+id/llamar_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_llamar" />

        <ImageButton
            android:id="@+id/mapas_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_mapa" />

        <ImageButton
            android:id="@+id/email_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_email" />
    </TableRow>

</android.support.constraint.ConstraintLayout>